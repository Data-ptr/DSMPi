#!/usr/bin/env python3

import os
import sys
import time
import psutil
import subprocess

import lib.status_lights

def find_procs_by_name(name):
    "Return a list of processes matching 'name'."
    ls = []
    for p in psutil.process_iter(attrs=["name", "exe", "cmdline"]):
        if name == p.info['name'] or \
                p.info['exe'] and os.path.basename(p.info['exe']) == name or \
                p.info['cmdline'] and p.info['cmdline'][0] == name:
            ls.append(' '.join(p.info['cmdline']))
    return ls

def checker():
    #files = glob.glob("/opt/ECMLink/datalogs/*.elg")
    files = glob.glob("/media/pi/test/*.elg")
    newest = os.stat(max(files , key = os.path.getctime))
    size = newest.st_size
    #print(size)
    return size

def matcher():
    past = checker()
    time.sleep(1)
    present = checker()

    if ( present <= past ):
         #print("Present is less than or equal")
         lib.status_lights.link_nlog()
    else:
           #print("Present is NOT less than or equal")
         lib.status_lights.link_ylog()

